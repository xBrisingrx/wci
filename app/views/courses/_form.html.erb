<%= form_with(model: @course, id: 'form-course' , class: 'needs-validation') do |form| %>
  <div class="row">
    <div class="col-6">
      <%= form.label :program_id, 'Programa:' %>
      <%= form.select(:program_id, @programs.collect {|p| ["#{p.code} - #{p.name}", p.id]}, 
                      {:include_blank => "Seleccione programa"},
                      class: 'select-2-countries form-select', required: true) %>
      <div class="invalid-feedback course_program"></div>
    </div>
    <div class="col-6">
      <%= form.label :teacher_id, 'Instructor:' %>
      <%= form.select(:teacher_id, @teachers.collect {|c| ["#{c.name}", c.id]}, 
                      {:include_blank => "Seleccione instructor"},
                      class: 'select-2-companies form-select', required: true) %>
      <div class="invalid-feedback course_teacher"></div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-6">
      <%= form.label :start_date, 'Desde:'%>
      <%= form.date_field :start_date, class: 'form-control form-control-sm col-6'%>
      <div class="invalid-feedback course_start_date"></div>
    </div>

    <div class="col-6">
      <%= form.label :finish_date, 'Hasta:' %>
      <%= form.date_field :finish_date, class: 'form-control form-control-sm col-6'%>
      <div class="invalid-feedback course_finish_date"></div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-6">
      <%= form.label :start_hour, 'Hora inicio:'%>
      <%= form.time_field :start_hour, class: 'form-control form-control-sm col-6'%>
      <div class="invalid-feedback course_start_hour"></div>
    </div>

    <div class="col-6">
      <%= form.label :finish_hour, 'Hora fin:' %>
      <%= form.time_field :finish_hour, class: 'form-control form-control-sm col-6'%>
      <div class="invalid-feedback course_finish_hour"></div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-6">
      <%= form.label :course_level_id, 'Nivel:  ' %>
      <%= form.select(:course_level_id, @levels.collect {|c| ["#{c.name}", c.id]}, 
                      {:include_blank => "Seleccione nivel"},
                      class: 'select-2-countries form-select') %>
      <div class="invalid-feedback course_course_level"></div>
    </div>
    <div class="col-6">
      <%= form.label :course_type_id, 'Metodologia:' %>
      <%= form.select(:course_type_id, @type.collect {|c| ["#{c.name}", c.id]}, 
                      {:include_blank => "Seleccione metodologia"},
                      class: 'select-2-companies form-select', required: true) %>
      <div class="invalid-feedback course_course_type"></div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :comment, 'Comentario:' ,class: 'col-3' %>
    <%= form.text_area :comment, class: 'form-control form-control-sm' %>
    <div class="invalid-feedback course_comment"></div>
  </div>

  <div class="actions mt-2">
    <%= form.submit 'Guardar', class: 'btn btn-primary mr-2'  %>
    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>