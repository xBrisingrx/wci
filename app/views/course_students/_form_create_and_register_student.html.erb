<%= form_with(url: create_and_register_student_path, id: 'form-create-and-register-student' , class: 'needs-validation') do |form| %>
  <%= form.hidden_field :course_id, value: @course_id %>
  <div class="row">
    <div class="col-6">
      <%= form.label :legajo, 'Legajo:' ,class: 'col-3' %>
      <%= form.text_field :legajo, class: 'form-control form-control-sm' %>
      <div class="invalid-feedback student_legajo"></div>
    </div>
    <div class="col-6">
      <%= form.label :dni, 'DNI:' ,class: 'col-3' %>
      <%= form.text_field :dni, class: 'form-control form-control-sm', required: true %>
      <div class="invalid-feedback student_dni"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form.label :name, 'Nombre:' ,class: 'col-3' %>
      <%= form.text_field :name, class: 'form-control form-control-sm', required: true %>
      <div class="invalid-feedback student_name"></div>
    </div>

    <div class="col-6">
      <%= form.label :lastname, 'Apellido:' ,class: 'col-3' %>
      <%= form.text_field :lastname, class: 'form-control form-control-sm', required: true %>
      <div class="invalid-feedback student_lastname"></div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-6">
      <% if @is_presencial %>
        <%= form.label :email, 'Email:' ,class: 'col-3' %>
        <%= form.email_field :email, class: 'form-control form-control-sm'%>
      <% else %>
        <%= form.label :email, 'Email(*):' ,class: 'col-3' %>
        <%= form.email_field :email, class: 'form-control form-control-sm', required: true %>
      <% end %>
      
      <div class="invalid-feedback student_email"></div>
    </div>

    <div class="col-6">
      <%= form.label :phone, 'Telefono:' , class: 'col-3' %>
      <%= form.text_field :phone, class: 'form-control form-control-sm'%>
      <div class="invalid-feedback student_phone"></div>
    </div>
  </div>

  <div class="form-group mt-2 row">
    <%= form.label :birthdate, 'Fecha de nacimiento:' , class: 'col-3' %>
    <%= form.date_field :birthdate, class: 'form-control form-control-sm col-6'%>
    <div class="invalid-feedback student_birthdate"></div>
  </div>

  <div class="form-group row">
    <div class="col-4 col-3">
      <%= form.label :country, 'Pais:' %>
    </div>
    <div class="col-8 col-6">
      <%= form.select(:country, @countries.collect {|c| ["#{c.name}", c.name]}, 
                      {:include_blank => "Seleccione pais"},
                      class: 'form-select form-select-country') %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-4 col-3">
      <%= form.label :company_id, 'Empresa:' %>
    </div>
    <div class="col-8 col-6">
      <%= form.select(:company_id, @companies.collect {|c| ["#{c.name}", c.id]}, 
                      {:include_blank => "Seleccione empresa"},
                      class: 'form-select form-select-company_id', required: true) %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :comment, 'Comentario:' ,class: 'col-3' %>
    <%= form.text_area :comment, class: 'form-control form-control-sm' %>
    <div class="invalid-feedback student_comment"></div>
  </div>

  <div class="actions mt-2">
    <%= form.submit 'Guardar', class: 'btn btn-primary mr-2'  %>
    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>