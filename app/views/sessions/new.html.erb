<div class="container-fluid">
  <div class="col-4 mx-auto">
    <div class="mb-4 text-center">
      <img src="/assets/logo.png" width="80" height="80" alt="">
    </div>
    <div class="card border-dark mb-3">
      <div class="card-body text-dark">
        <h5 class="card-title text-center">Inicio de sesión</h5>
        <%= form_tag sessions_path do |form| %>
          <div class='form-group'>
            <%= text_field_tag :username, nil, class: 'form-control', placeholder: 'Nombre de usuario', required: true %>
          </div>  
          <div class='form-group'>
            <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Contraseña', required: true %>
          </div>  
          <div class='actions text-center'>
            <%= submit_tag 'Ingresar al sistema', class: 'btn btn-info' %>
          </div>
        <% end %>
      </div>
    </div>
    <% if alert %>
    <div class="alert alert-danger mt-4" role="alert">
      <%= alert %>
    </div>
    <% end %>
  </div>
  
</div>