<%= form_with(model: @program, id: 'form-program' ,class: 'needs-validation g-brd-around g-brd-gray-light-v4 g-pa-30 g-mb-30') do |form| %>
  <div class="form-group row">
    <div class="col-6">
      <%= form.label :code, 'Codigo:' ,class: 'col-3' %>
      <%= form.text_field :code, class: 'form-control form-control-sm', required: true %>
      <div class="invalid-feedback program_code"></div>
    </div>
    <div class="col-6">
      <%= form.label :certificate, 'Certificado:' ,class: 'col-3' %>
      <select name="program[certificate]" id="program_certificate" class="form-control form-control-sm" required>
        <option value="1">Certificado 1</option>
        <option value="2">Certificado 2</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :name, 'Nombre:' ,class: 'col-3' %>
    <%= form.text_field :name, class: 'form-control form-control-sm', required: true %>
    <div class="invalid-feedback program_name"></div>
  </div>

  <div class="form-group">
    <%= form.label :comment, 'Comentario:' ,class: 'col-3' %>
    <%= form.text_area :comment, class: 'form-control form-control-sm' %>
    <div class="invalid-feedback program_comment"></div>
  </div>

  <div class="actions mt-2">
    <%= form.submit 'Guardar', class: 'btn btn-primary mr-2'  %>
    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>