<%= form_with(model: @teacher, id: 'form-teacher' , class: 'needs-validation') do |form| %>

  <div class="row">
    <div class="col-6">
      <%= form.label :name, 'Nombre:' ,class: 'col-3' %>
      <%= form.text_field :name, class: 'form-control form-control-sm', required: true %>
      <div class="invalid-feedback teacher_name"></div>
    </div>

    <div class="col-6">
      <%= form.label :dni, 'DNI:' ,class: 'col-3' %>
      <%= form.text_field :dni, class: 'form-control form-control-sm' %>
      <div class="invalid-feedback teacher_dni"></div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-6">
      <%= form.label :email, 'Email:' ,class: 'col-3' %>
      <%= form.email_field :email, class: 'form-control form-control-sm' %>
      <div class="invalid-feedback teacher_email"></div>
    </div>

    <div class="col-6">
      <%= form.label :phone, 'Telefono:' , class: 'col-3' %>
      <%= form.text_field :phone, class: 'form-control form-control-sm'%>
      <div class="invalid-feedback teacher_phone"></div>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-6">
      <%= form.label :title, 'Titulo:' ,class: 'col-3' %>
      <%= form.text_field :title, class: 'form-control form-control-sm' %>
      <div class="invalid-feedback teacher_title"></div>
    </div>
    <div class="col-6">
      <div class="col-2">
      <%= form.label :country, 'Pais:' %>
    </div>
    <div class="col-8">
      <%= form.select(:country, @countries.collect {|c| ["#{c.name}", c.name]}, 
                      {:include_blank => "Seleccione pais"},
                      class: 'select-2-countries form-select') %>
    </div>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :comment, 'Comentario:' ,class: 'col-3' %>
    <%= form.text_area :comment, class: 'form-control form-control-sm' %>
    <div class="invalid-feedback teacher_comment"></div>
  </div>

  <div class="actions mt-2">
    <%= form.submit 'Guardar', class: 'btn btn-primary mr-2'  %>
    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
  </div>
<% end %>